<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <head>
    <title>Vikas</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="Redmine" />
    <meta name="keywords" content="issue,bug,tracker" />
    
    <%%= javascript_include_tag :defaults  %>
    <%%= javascript_include_tag 'admin/context_menu' %>
    <%%= javascript_include_tag 'admin/wufoo' %>
    
    <%%= stylesheet_link_tag "admin/application" %>    
    <%%= stylesheet_link_tag "admin/context_menu" %>
    <%%= stylesheet_link_tag "admin/form" %>
    <%%= stylesheet_link_tag "admin/structure" %>
    <%%= stylesheet_link_tag "admin/theme" %>
    
    <!--[if IE]>
    <style type="text/css">
      * html body{ width: expression( document.documentElement.clientWidth < 900 ? '900px' : '100%' ); }
      body {behavior: url(/redmine/stylesheets/csshover.htc);}
    </style>
    <![endif]-->
  </head>  
  <body>
    <div id="wrapper">
      <div id="top-menu">
        <div id="account">
          <ul>
            <li><%%= link_to 'Sign out', '/logout', :class=>'logout' %></li>
          </ul>    
        </div>
        <div id="loggedas">Logged as <%%= current_user.login %></div>
        <ul>
          <li><%%= link_to 'Home', admin_home_path, :class=>'home' %></li>
          <%% unless controller.controller_name == 'home'%>
            <li>=> <%%= link_to "#{controller.controller_name.humanize}", :controller=>controller.controller_name %></li>
          <%% end %>
        </ul>
      </div>
      
      <div class="" id="main">                
        <%%= yield %>        
      </div>
    </div>
  </body>
</html>
